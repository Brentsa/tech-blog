<div class="dashboard-header">
    <h1 class="title-format">Create A New Blog Post</h1>
</div>

<form class="blog-form">
    <div>
        <label for="blog-title">Blog Title:</label>
        <textarea name="blog-title" rows="1"></textarea>
    </div>
    <div>
        <label for="blog-content">Blog Content:</label>
        <textarea name="blog-content" rows="4"></textarea>
    </div>
    <div>
        <button type="submit">Create Blog</button>
    </div>
</form>

<script src="/javascript/create-blog-post.js"></script>